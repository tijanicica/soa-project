{
  "Routes": [
    {
      "UpstreamPathTemplate": "/stakeholders/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE", "OPTIONS" ],
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "stakeholders-service",
          "Port": 8001
        }
      ],
      "DownstreamPathTemplate": "/{everything}"
    },
    {
      "UpstreamPathTemplate": "/tours/files/upload",
      "UpstreamHttpMethod": [ "POST", "OPTIONS" ], 
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "tour-service",
          "Port": 8003
        }
      ],
      "DownstreamPathTemplate": "/files/upload"
    },
    {
      "UpstreamPathTemplate": "/blogs/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE", "OPTIONS" ],
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "blog-service",
          "Port": 8002
        }
      ],
      "DownstreamPathTemplate": "/{everything}"
    },

    {
      "UpstreamPathTemplate": "/tours/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE", "OPTIONS", "PATCH" ],
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "tour-service",
          "Port": 8003
        }
      ],
      "DownstreamPathTemplate": "/tours/{everything}"
    },
    {
      "UpstreamPathTemplate": "/followers/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE", "OPTIONS" ],
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "followers-service",
          "Port": 8004
        }
      ],
      "DownstreamPathTemplate": "/{everything}"
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:8000",
    "CorsOptions": {
      "AllowedOrigins": [
        "http://localhost:3000"
      ],
      "AllowedMethods": [
        "POST",
        "GET",
        "PUT",
        "DELETE",
        "OPTIONS"
      ],
      "AllowedHeaders": [
        "*"
      ],
      "AllowCredentials": true
    }
  }
}